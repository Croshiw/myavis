{% extends 'layouts/base.html.twig' %}

{% block title 'Réinitialiser votre mot de passe' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto" style="width : 50%;">
            <h1 class="mt-5 mb-3 text-center">Réinitialiser votre mot de passe</h1>
            {% for flashError in app.flashes('reset_password_error') %}
            <div class="alert alert-error mb-3 rounded" role="alert">{{ flashError }}</div>
            {% endfor %}
            <p class="mb-3 text-center text-muted">Saisissez votre mail et vous allez recevoir un lien pour réinitialiser votre mot de passe.</p>
                
            

            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <div class="d-grid gap-2">
                    <button type="submit" class=" mt-3 btn brn-lg btn-primary">Envoyer le mail</button>
                </div>
                
            {{ form_end(requestForm) }}


        </div>
    </div>
    
{% endblock %}