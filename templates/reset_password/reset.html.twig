{% extends 'layouts/base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto" style="width : 50%;">
            <h1 class="mt-5 mb-3 text-center">Réinitialiser votre mot de passe</h1>

            {{ form_start(resetForm) }}
                {{ form_row(resetForm.plainPassword) }}
                <div class="d-grid gap-2">
                    <button type="submit" class="mt-3 btn btn-lg btn-primary">Réinitialiser mot de passe</button>
                </div>
                
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}
